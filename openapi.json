{
  "openapi": "3.1.0",
  "info": { "title": "Trust KB Search", "version": "1.0.0" },
  "servers": [{ "url": "https://YOUR-PUBLIC-URL" }],
  "paths": {
    "/healthz": {
      "get": {
        "operationId": "health",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/search": {
      "post": {
        "operationId": "search",
        "summary": "Quota+dedupe search across L1..L5",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "query": { "type": "string" },
                  "filters": { "type": "object" }
                },
                "required": ["query"]
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/hydrate": {
      "post": {
        "operationId": "hydrate",
        "summary": "Return full text for chunk IDs",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ids": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["ids"]
              }
            }
          }
        },
        "responses": { "200": { "description": "OK" } }
      }
    }
  }
}
